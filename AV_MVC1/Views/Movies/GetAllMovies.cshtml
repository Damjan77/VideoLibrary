@model List<AV_MVC1.Models.Movie>
@{
    ViewBag.Title = "GetAllMovies";
}

<h3>Movies:</h3>
<ul>
    @{
        int i = 0;
        foreach (var c in Model)
        {
            <li>
                <h4>
                    <img src="@c.imageURL" style="max-width:100px" />
                    @Html.ActionLink(c.name, "ShowMovie", new { id = i }) |
                    @Html.ActionLink("Edit", "EditMovie", new { id = i }) |
                    @Html.ActionLink("Delete", "DeleteMovie", new { id = i })
                </h4>
            </li>
            i++;
        }
    }
</ul>
